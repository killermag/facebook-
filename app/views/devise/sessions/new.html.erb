<%= form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="flex sm:justify-center">
      
      <div class="bg-white shadow-2xl flex flex-col  w-screen sm:w-96 mx-3 items-center space-y-10 my-8 py-8 px-4 sm:px-0 rounded-md">

          <div class="w-full sm:w-80">
            <%= f.text_field :login,placeholder: 'email address or username', autofocus: true, autocomplete: "login",class: "border border-solid border-gray-300 focus:outline-none focus:ring w-full sm:w-80 pl-2 rounded h-14 sm:h-10"  %>
          </div>

          <div class="w-full sm:w-80"> 
            <%= f.password_field :password, autocomplete: "current-password",placeholder: 'password', class: "border border-solid border-gray-300 focus:outline-none focus:ring w-full sm:w-80 pl-2 rounded h-14 sm:h-10" %>
          </div>

          <div class="w-full sm:w-80"> 
            <%= f.submit "Log in", class: "w-full bg-green text-white bg mr-3 h-11 hover:bg-opacity-90 duration-100 rounded font-semibold border border-solid border-green-900"  %>
          </div>

          <div>
            <%= link_to new_password_path(resource) do %>
            <p class=" text-blue-500 font-semibold hover:underline">Forgotten password? </p>
            <% end %>
          </div>
          
          <div class="w-full sm:w-80"> 
          <hr>
          </div>

          <div class="w-full sm:w-80"> 
            <%= link_to new_user_registration_path do %>
              <button class="w-full bg-blue-700 text-white bg mr-3 h-12 hover:bg-opacity-90 duration-100 rounded font-semibold border-2 border-solid border-blue-200">Create a new account</button>
            <% end %>
          </div>

          <div class="w-full sm:w-80"> 
            <%= link_to user_facebook_omniauth_authorize_path, method: :post do %>
              <button class="w-full bg-indigo-50 text-blue-600 bg mr-3 h-12 hover:bg-opacity-90 duration-100 rounded font-semibold border-2 border-solid border-indigo-200">Log in with facebook</button>
            <% end %>
          </div>
    
      
      </div>

      
    </div>
  
  
  
<% end %>



  


